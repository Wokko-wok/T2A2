<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age %>
  </div>

   <div class="field">
    <%= form.label :species, style: "display: block" %>
    <%= form.text_field :species %>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

   <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, "image/png,image/jpg,image/jpeg" %>
  </div>

  <div class=actions>
    <%= form.submit %>
  </div>
<% end %>
